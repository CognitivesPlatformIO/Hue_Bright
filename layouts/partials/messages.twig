{% for key,message in _AppHelper.getFlashMessages() %}
    {% if key == 'success'%}
        <div class="alert alert-success alert-dismissible fade in" role="alert" style="width: 100%; margin-top: 20px;">
            <button class="close" aria-label="Close" data-dismiss="alert" type="button"><span aria-hidden="true">×</span></button>
            <p>{{message | raw }}</p>
        </div>
    {% else %}
        <div class="alert alert-danger alert-dismissible fade in" role="alert" style="width: 100%; margin-top: 20px;">
            <button class="close" aria-label="Close" data-dismiss="alert" type="button"><span aria-hidden="true">×</span></button>
            <h4>{{message | raw }}</h4>
        </div>
    {% endif %}
{% endfor %}