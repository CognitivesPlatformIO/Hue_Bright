                    </div>
                </div>
                {% if not _User.isGuest()%}
                    <a href="javascript:void(0)"
                       class="header__heading-link header__heading-link--profile" id="profile">
                        <img src="{{_Media.getMediaUrl(user.profileMedia, 150, 150, {radius: 'max', gravity: 'face', 'crop': 'thumb', type:'user'})}}" alt="Avatar">
                    </a>
                {% elseif not _Network.isNetworkClosed(network) %}
                    <div class="header__login">
                        <a href="javascript:void(0)" class="header__login__link">LOG IN</a>
                        <span class="header__login__divider"></span>
                        <a href="javascript:void(0)" class="header__login__link header__login__link--signup sign-up__link">SIGN UP</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
