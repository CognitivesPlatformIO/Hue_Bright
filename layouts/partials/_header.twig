                <div class="header__heading visible_desktop">
                    {% if not _Network.isNetworkClosed(network)%}
                        <a href="javascript:void(0)" class="header__heading-link" id="login">Sign In</a>
                    {% endif %}
                    <div class="header__search">
                        <form class="searchArticleForm" action="{{blog.url}}/search" method="get" autocomplete="off">
                            <input type="text" class="header__search-text" placeholder="Search" name ="s" value="{{_AppHelper.getRequest('s')}}" required>
                                <button class="header__search-btn searchArticle">
                                    <?xml version="1.0" encoding="UTF-8" standalone="no"?>
